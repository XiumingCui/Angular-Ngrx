{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/modules/core/*"],
      "@shared/*": ["app/modules/shared/*"],
      "@landing/*": ["app/modules/landing/*"],
      "@products/*": ["app/modules/products/*"],
      "@product/*": ["app/modules/product/*"]
    },
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
